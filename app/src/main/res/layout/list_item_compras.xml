<?xml version="1.0" encoding="utf-8"?><!-- cardview_item.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_compras"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/linearLayoutLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_card"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/side_nav_bar" />

        <TextView
            android:id="@+id/item_title_compras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/producto"
            android:textSize="18sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Código:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_codigo_compra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="f677a7fc-8"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Fecha compra"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_fecha_compra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023-10-05 12:00:00"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Intermediario"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_intermediario_compra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pepep Juan"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Número de productos:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_amount_compra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Total:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_total_compra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_view_compras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Ver detalles" />
    </LinearLayout>

</androidx.cardview.widget.CardView>


