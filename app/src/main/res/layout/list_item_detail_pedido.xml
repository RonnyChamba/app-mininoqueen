<?xml version="1.0" encoding="utf-8"?><!-- cardview_item.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_pedido"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/linearLayoutLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageProductDetails"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/side_nav_bar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameProductDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nameProducto"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/codeProductDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="123456"
                    android:textSize="15sp" />


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/amountProductDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/priceProductDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15"
            android:layout_marginTop="5dp"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/totalProductDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>


